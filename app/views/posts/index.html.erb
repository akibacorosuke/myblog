<h2>
  <%= link_to '記事投稿', new_post_path, class: 'header-menu' %>
  My Posts
</h2>
<ul>
	<% @posts.each do |post|%>
	<li>
     <%= link_to post.title, post_path(post) %>	
     <%= link_to 'delete',
      post_path(post),
       method: :delete,
       class: 'delete',
       data: {confirm: 'Are you sure?'} %>	
     <%= link_to 'edit', edit_post_path(post#idのこと
     ), class: 'edit'%> 

	</li>
	<% end %>
</ul>

