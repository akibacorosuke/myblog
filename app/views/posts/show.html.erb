<h2><%= @post.title %></h2>
<p><%= @post.body %></p>

<h3>Comments</h3>
<% if @post.comments.any? #もしpostのコメントがあったら%>
<ul>
<%= @post.comments.each do |comment| %>
<li>
 <%= comment.body %>
</li>
<% end %>
</ul>
<% end %>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
	<%= f.text_field :body %>
</p>
<p>
	<%= f.submit %>
</p>
<% end %>	
<p>
  <%= link_to 'back', posts_path %>
</p>
